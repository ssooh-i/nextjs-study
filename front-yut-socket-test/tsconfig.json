{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@/action/*": ["./action/*"],
      "@/pages/*": ["./pages/*"],
      "@/present/*": ["./present/*"],
      "@/common/*": ["./present/common/*"],
      "@/component/*": ["./present/component/*"],
      "@/layout/*": ["./present/layout/*"],
      "@/store/*": ["./store/*"],
      "@/public/*": ["./public/*"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "stories/Colors.mdx"]
}
